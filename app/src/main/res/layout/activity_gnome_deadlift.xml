<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gnome_deadlift"
    android:background="@drawable/gradient_background_activities">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <!-- Shop Title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Other Views or Layouts -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <!-- Shop Title -->

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/tren200mg"
                android:paddingBottom="15dp"/>

            <TextView
                android:id="@+id/punticos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Promo code 20%: TREN200MG"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/gnomeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/getgnomed" />

    <TextView
        android:id="@+id/textScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gnomeView"
        android:layout_alignBottom="@+id/gnomeView"
        android:layout_gravity="center"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="242dp"
        android:background="@color/white"
        android:text="+0"
        android:textColor="#F1B500"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/gnome1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/gnome1" />
    <ImageView
        android:id="@+id/gnome2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/gnome2" />
    <ImageView
        android:id="@+id/gnome3"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:src="@drawable/gnome3" />
    <ImageView
        android:id="@+id/gnome4"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:src="@drawable/gnome1" />
    <ImageView
        android:id="@+id/gnome5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/gnome2" />
    <ImageView
        android:id="@+id/gnome6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/gnome1" />

    <TextView
        android:id="@+id/descuento"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="CODE 20% OFF: XDFW23"
        android:textStyle="bold"
        android:textSize="24dp"/>


</RelativeLayout>
